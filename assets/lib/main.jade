div(class="lista-primera")
	article(ng-repeat="item in gather", class="panel panel-default")
		
		h2(class="panel-heading my-headerr") {{item.titulo}}
		
		div(class="panel-body")
			
			img(class="imagen", ng-src="{{item.imagen}}", ng-click="getPodcast(item.url)", ui-sref="index.podcastList")
		
			p(class="artista") Artista : {{item.artista}}

			p(class="categoria") Categor√≠a : {{item.categoria}}

			p(class="resumen") Resumen : {{item.resumen}}

			button(ng-click="getPodcast(item.url)", ui-sref="index.podcastList") Ir a listado
