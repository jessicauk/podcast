body
	// label, h1, h2, select
	font-family: 'Architects Daughter', cursive;
	color: #343C48
.podcast
	background: #FFF
	form
		padding: 15px
		label
			margin: 2px 10px
			color: #343C48
			font-size: 18px
			display: block
		select
			width: 35%
			display: block
			@media screen and (max-width: 500px)
				width: 70%
		button
			background-color: #E6C973
			padding: 5px
			font-size: 15px
			box-shadow: 0px 4px 1px #156785
			//background: palette-azul2
			color: blanco
			border: none
			border-radius: 3px
			cursor: pointer
			text-align: center
			outline: none
			margin: 8% 0 auto
			display: block
			@media screen and (max-width: 995px)
				display: block
				margin: 0 auto
			&:active
				background-color: #f1c851
				transition: .3s ease-in-out
				transform: translateY(2px)
				box-shadow: 0 2px #156785
				// line-height: 3px
			&:hover
				background-color: #f1c851
				transition: .3s ease-in-out
